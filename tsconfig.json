{
  "compilerOptions": {
    "baseUrl": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": false,
    "jsx": "react",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "ignoreDeprecations": "5.0",
    "importHelpers": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}